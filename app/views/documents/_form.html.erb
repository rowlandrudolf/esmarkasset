<%= form_for @document do |f| %>
	<%= render 'shared/form_errors', object: @document %>
   <fieldset>	
    <%= f.label :title %>
   	<%= f.text_field :title %>
   	<%= f.label :author %>
   	<%= f.text_field :author %>
   	<%= f.label :date %>
   	<%= f.date_field :date %>
   	<%= f.label :description %>
   	<%= f.text_area  :description %>
   	<%= f.label :attachment %>
   	<%= f.file_field :attachment %>
    <%= f.submit "Add #{@document.model_name}" %>
   </fieldset>	
<% end %>
</div>